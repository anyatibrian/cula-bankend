{
  "name": "saccopay-backend",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/anyatibrian/saccopay-backend.git",
  "author": "anyatibrian,bagenda Deogratious,Ryan simiyu",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "all": "^0.0.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.1",
    "passport-jwt": "^4.0.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^4.31.2",
    "sequelize-cli": "^5.5.0",
    "ts-node": "^8.3.0"
  },
  "scripts": {
    "tslint": "tslint './src/**/*.{ts}'",
    "tslint:fix": "npm run tslint -- --fix",
    "tslint:check": "tslint-config-prettier-check ./tslint.json",
    "prettier": "prettier --write --config ./.prettierrc './src/**/*.{ts,tsx}'",
    "start": " node ./dist/server.js",
    "start-dev": "ts-node ./src/server/server.ts",
    "build-dev": "tsc && npm start",
    "dev": "nodemon  --exec babel-node -e ts -w ./src -x npm run start-dev",
    "test": "cross-env NODE_ENV=test npm run reset:db && NODE_ENV=test nyc --reporter=html --reporter=text mocha --require @babel/polyfill -r ts-node/register src/*/**/**/*spec.ts src/*/**/*.spec.ts src/**/*.spec.ts --timeout 20000 --exit",
    "test:seed": "NODE_ENV=test npm run reset:db && NODE_ENV=test nyc --reporter=html --reporter=text mocha --require @babel/polyfill --require @babel/register ./dist --timeout 10000 --exit",
    "sequelize": "./node_modules/.bin/babel-node ./node_modules/.bin/sequelize $*",
    "migrate": "./node_modules/.bin/babel-node ./node_modules/.bin/sequelize db:migrate",
    "reset:seeds": "npm run sequelize db:seed:undo:all && npm run sequelize db:seed:all",
    "reset:db": "npm run dropMeta && npm run sequelize db:migrate:undo:all && npm run sequelize db:migrate && npm run reset:seeds",
    "build": "rm -rf dist && tsc && npm run reset:db && cp -r ./src/templates ./dist/templates",
    "lint": "tsc --noEmit && eslint 'src/*/**/*.{js,ts,tsx}' --quiet --fix",
    "coverage": "nyc report --reporter=text-lcov|coveralls",
    "dropMeta": "ts-node src/database/other.ts"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/morgan": "^1.7.37",
    "@types/node": "^8.5.2",
    "@types/passport": "^1.0.1",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/sequelize": "^4.28.3",
    "@types/typescript": "^2.0.0",
    "celebrate": "^10.0.1",
    "husky": "^3.0.4",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.12.1",
    "prettier": "^1.18.2",
    "tslint": "^5.19.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.6.2"
  }
}
