{
  "name": "saccopay-backend",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/anyatibrian/saccopay-backend.git",
  "author": "anyatibrian,bagenda Deogratious,Ryan simiyu",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "all": "^0.0.0",
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.2",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "global": "^4.4.0",
    "lite-server": "^2.5.4",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.1",
    "passport-jwt": "^4.0.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^4.31.2",
    "sequelize-cli": "^5.5.0",
    "ts-node": "^8.3.0"
  },
  "scripts": {
    "tslint": "tslint './src/**/*.{ts}'",
    "tslint:fix": "npm run tslint -- --fix",
    "tslint:check": "tslint-config-prettier-check ./tslint.json",
    "prettier": "prettier --write --config ./.prettierrc './src/**/*.{ts,tsx}'",
    "start": " node ./dist/server.js",
    "start-dev": "ts-node ./src/server/server.ts",
    "build-dev": "tsc && npm start",
    "dev": "nodemon  --exec babel-node -e ts -w ./src -x npm run start-dev"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "coverage",
      "dist",
      "src/database/migrations",
      "src/database/seeders",
      "src/database/other.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run start-dev",
    "ext": "ts"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/node": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.6.0",
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.2.2",
    "@types/chai-http": "^4.2.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/hapi__joi": "^15.0.4",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/mocha": "^5.2.7",
    "@types/morgan": "^1.7.37",
    "@types/multer": "^1.3.9",
    "@types/node": "^8.5.2",
    "@types/passport": "^1.0.1",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/sequelize": "^4.28.3",
    "@types/typescript": "^2.0.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "bcrypt": "^3.0.6",
    "celebrate": "^10.0.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^5.2.1",
    "husky": "^3.0.4",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^2.2.0",
    "mocha": "^6.2.0",
    "multer": "^1.4.2",
    "nyc": "^14.1.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.12.1",
    "prettier": "^1.18.2",
    "tslint": "^5.19.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.6.3"
  }
}